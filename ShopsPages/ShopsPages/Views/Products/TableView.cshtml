@using ShopsPages.Models
@model Shop

<div class="table-responsive">
    <table class="product-table-class table table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 1; i<=Model?.Products.Count; i++)
            {
                <tr>
                    <th>@i</th>
                    <th>@Model.Products.ElementAt(i - 1).Name</th>
                    <th>@Model.Products.ElementAt(i - 1).Description</th>
                    <th class="id-column-hidden">@Model.Products.ElementAt(i-1).ProductId</th>
                </tr>
            }
        </tbody>
    </table>
</div>