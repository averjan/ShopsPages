@{
}

@model Shop

@{
    ViewBag.Title = "Index";
}

<h3>Shops</h3>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 1; i<=Model?.Products.Count; i++)
        {
            <tr>
                <th>@i</th>
                <th>@Model.Products.ElementAt(i - 1).Name</th>
                <th>@Model.Products.ElementAt(i - 1).Description</th>
            </tr>
        }
    </tbody>
</table>