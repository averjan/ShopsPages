@using ShopsPages.Models

@model Shop


<h1 class="display-3">Products</h1>
<div id="all-content">

    @await Html.PartialAsync("TableView", Model)

    <div id="crud-panel">

        <div class="crud-form">
            <form method="post" id="add-form">
                <h2 class="display-3">Add Product</h2>
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" name="Name" class="form-control" placeholder="Name" required />
                </div>

                <div class="form-group">
                    <label>Description</label>
                    <input type="text" name="Description" class="form-control" placeholder="Description" required />
                </div>

                <input type="hidden" name="ShopId" value="@Model.ShopId" />
                <input type="submit" value="Add" class="btn btn-primary"/>
            </form>
        </div>

        <div class="crud-form">
            <form method="put" id="edit-form">
                <h2 class="display-3">Edit Product</h2>
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" name="Name" class="form-control" placeholder="Name" required />
                </div>

                <div class="form-group">
                    <label>Description</label>
                    <input type="text" name="Description" class="form-control" placeholder="Description" required />
                </div>

                <input type="hidden" name="ShopId" value="@Model.ShopId" />
                <input type="hidden" name="ProductId" />
                <input type="submit" value="Edit" class="btn btn-primary"/>
            </form>
        </div>

        <button id='remove-btn' onclick="RemoveActiveProduct" class="btn btn-danger">Remove</button>

    </div>

</div>